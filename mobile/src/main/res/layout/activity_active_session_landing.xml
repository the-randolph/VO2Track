<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActiveSessionLandingActivity">

    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="417dp"
            android:src="@drawable/logo_circle"
            tools:layout_editor_absoluteX="0dp" tools:ignore="MissingConstraints" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"/>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="278dp"
            android:layout_height="62dp"
            android:layout_marginTop="440dp"
            android:textColor="#77d353"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Running, jogging, walking?\nTrack your performance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.496"/>

    <Button
        android:id="@+id/buttonStartActiveSession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="startActiveSession"
        android:text="Start Active Session"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>