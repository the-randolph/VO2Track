<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity">

    <FrameLayout
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:focusable="true"
            android:onClick="viewSession"
            android:background="@color/colorBlueSecondary"
            tools:layout_editor_absoluteY="0dp" tools:ignore="MissingConstraints"
            android:paddingLeft="0dp" android:paddingRight="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent">

        <TextView android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:text="RUN"
                  android:textColor="@color/colorBluePrimary"
                  android:textSize="35dp"
                  android:textAlignment="viewStart"
                  android:lineSpacingMultiplier="1.3"
                  android:layout_marginTop="20dp"
                  android:layout_marginLeft="10dp"/>


        <TextView android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:text="Jan 20"
                  android:textColor="@color/colorBlueTertiary"
                  android:textSize="35dp"
                  android:textAlignment="viewStart"
                  android:lineSpacingMultiplier="1.3"
                  android:layout_marginTop="55dp"
                  android:layout_marginLeft="10dp"/>

        <TextView android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:text="7.95"
                  android:textColor="@color/colorBluePrimary"
                  android:textSize="90dp"
                  android:textAlignment="viewEnd"
                  android:lineSpacingMultiplier="1.3"
                  android:layout_marginBottom="10dp"
                  android:layout_marginRight="10dp"/>

        <TextView android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:text="27:05:02"
                  android:textColor="@color/colorBlueTertiary"
                  android:textSize="35dp"
                  android:textAlignment="viewEnd"
                  android:lineSpacingMultiplier="1.3"
                  android:layout_marginTop="100dp"
                  android:layout_marginRight="10dp"/>
    </FrameLayout>

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="176dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>