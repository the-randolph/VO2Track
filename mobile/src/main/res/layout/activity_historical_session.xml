<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HistoricalSessionActivity">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" tools:ignore="MissingConstraints">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <FrameLayout
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"

                    android:background="@color/colorPurpleSecondary"
                    tools:layout_editor_absoluteY="0dp" tools:ignore="MissingConstraints"
                    android:paddingLeft="0dp" android:paddingRight="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:paddingTop="20dp"
                    android:layout_marginTop="20dp">

                <TextView android:layout_height="wrap_content"
                          android:layout_width="fill_parent"
                          android:text="RUN"
                          android:textColor="@color/colorPurplePrimary"
                          android:textSize="35dp"
                          android:textAlignment="viewStart"
                          android:lineSpacingMultiplier="1.3"
                          android:layout_marginTop="10dp"
                          android:layout_marginLeft="10dp"/>


                <TextView android:layout_height="wrap_content"
                          android:layout_width="fill_parent"
                          android:text="Jan 20"
                          android:textColor="@color/colorPurpleTertiary"
                          android:textSize="35dp"
                          android:textAlignment="viewStart"
                          android:lineSpacingMultiplier="1.3"
                          android:layout_marginTop="45dp"
                          android:layout_marginLeft="10dp"/>

                <TextView android:layout_height="wrap_content"
                          android:layout_width="fill_parent"
                          android:text="7.95"
                          android:textColor="@color/colorPurplePrimary"
                          android:textSize="90dp"
                          android:textAlignment="viewEnd"
                          android:lineSpacingMultiplier="1.3"
                          android:layout_marginBottom="10dp"
                          android:layout_marginRight="10dp"/>

                <TextView android:layout_height="wrap_content"
                          android:layout_width="fill_parent"
                          android:text="27:05:02"
                          android:textColor="@color/colorPurpleTertiary"
                          android:textSize="35dp"
                          android:textAlignment="viewEnd"
                          android:lineSpacingMultiplier="1.3"
                          android:layout_marginTop="90dp"
                          android:layout_marginBottom="10dp"
                          android:layout_marginRight="10dp"/>
            </FrameLayout>

            <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="291dp"
                    android:src="@drawable/vo2_hr"
                    tools:layout_editor_absoluteX="0dp" tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="16dp" android:paddingLeft="8dp" android:paddingRight="8dp"
                    android:layout_marginTop="20dp"/>

            <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:src="@drawable/flow_volume"
                    tools:layout_editor_absoluteX="0dp" tools:ignore="MissingConstraints"
                    android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/imageView1"
                    android:paddingLeft="8dp" android:paddingRight="8dp" android:paddingBottom="8dp"/>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>